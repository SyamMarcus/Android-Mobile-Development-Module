<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quantum_grey200"
    tools:context="com.example.geartrader.UserListActivity">


    <Button
        android:id="@+id/displayListingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/refresh_listings"
        android:textAllCaps="false" />

    <ListView
        android:id="@+id/listingListView"
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:layout_below="@+id/openRegisterButton"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/openListingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:clickable="true"
        android:contentDescription="Used to open listing activity to create a new listing"
        android:focusable="true"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>