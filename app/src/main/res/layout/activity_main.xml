<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quantum_grey200"
    tools:context="com.example.geartrader.MainActivity">

    <Button
        android:id="@+id/selectCategoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="140dp"
        android:text="@string/sort_by_category"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/openLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="17dp"
        android:text="Login"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/userListingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:text="View Your Listings"
        android:textAllCaps="false" />

    <ListView
        android:id="@+id/listingListView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/openRegisterButton"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/openListingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="18dp"
        android:clickable="true"
        android:contentDescription="Used to open listing activity to create a new listing"
        android:focusable="true"
        app:srcCompat="@android:drawable/ic_input_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/displayListingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:clickable="true"
        android:contentDescription="Used to refresh the listing list"
        android:focusable="true"
        app:srcCompat="@android:drawable/stat_notify_sync" />


</RelativeLayout>